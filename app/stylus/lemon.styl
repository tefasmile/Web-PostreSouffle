@import "normalize.styl"
@import "fonts.styl"
@import "fontsgoogle.styl"

titulo = #60747D
azulito = #DAE8E8
cielito = #2E96B4
rosado = #D93ADD
gris_oscuro = #615C5C
gris_claro = #828282
gris = #62767F
grisesito = #878C8E
white = #FFFFFF
azul_aqua = #24ADCE
header = #F6F1F1

a
  text-decoration none
body
  font-family 'Nunito','Lato', sans-serif
  font-size 16px

figure
  margin 0

p
  margin 0

footer
  .redes
    top -.5em
    padding .5em
    position relative
    .action
      font-size 1.6em
      &.blue
        color azul_aqua
h3
  margin 0
  color rosado

header
  width 100%
/*--animacion slider--*/
ul
  margin 0

.rslides
  position relative
  list-style none
  overflow hidden
  width 100%
  padding 0
  margin 0
  li
    -webkit-backface-visibility hidden
    position absolute
    display none
    width 100%
    left 0
    top 0
    &:first-child
      position relative
      display block
      float left
  img
    display block
    height auto
    float left
    width 100%
    border 0
/*--end slider--*/

#button_send
  border-radius 4px
  background rosado
  border 1px solid lime
  padding .2em 1em
  color white

