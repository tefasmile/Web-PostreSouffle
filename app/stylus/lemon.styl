  .container
    &.medium
      width auto
  
  .deskt
    display block

  .desser
    top 1em
    position relative
  
  .dimensiones
    display block
  
  .footer
    background-color #2e96b4
    font-family Raavi
    height 10.5em
    top 22.5em;
    position relative

  .imagen
