    text-align left
  
  .image_principal
    display none
  
  .logo
    padding 1.5em 0
  
  .list_beneficios
    li
      font-size 1.1em
  
  .leyend_conctato
    font-size 1.1em
    font-family Lato
  
  .leyend
    font-size 1.1em
  
  .list_beneficios
    margin-left 0
  
  .size
