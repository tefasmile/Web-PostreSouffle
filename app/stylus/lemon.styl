      margin-right .5em
    
  .menu
    display inline-block
    overflow hidden
    float right
    .item
      float left
      list-style none
      position relative
      a
        color gris_claro 
        cursor pointer
        display block
        padding .5em
        border-top 5px solid transparent
        text-transform uppercase
        &:hover
          border-bottom 6px solid azul_aqua
          -webkit-transition all .2s ease
  
  .menu
    ul
      padding 0 
      li:hover 
        ul
          display block
  
  .list
    top -.8em
    position relative
  
  
  .padding
