    height 7em
    width 100%
    .button-menu
    .logo_mobil
      display none


@media screen and (max-width:997px)
    
  ul
    padding 0 

  header
    .menu
      display block
  
  header 
    nav
      height calc(100% - 80px);
      width 80%
      position fixed
      right 100%
      margin 0
      overflow scroll
  
  nav
    background azul_aqua
    top 17.2%

  header nav ul li
    display block
    border-bottom 1px solid rgba(255,255,255,.5)
    left 0
  
  header nav ul li a
    display block
    left 0
    
  header nav ul li:hover .products
    display block
  
  header nav ul li .products
    display none
    background rosado
    position absolute
    width 100%
    top 8.8em
    left 0

  header nav ul li .products li
    display block
    padding 1em
    left 0

  header nav ul li:hover
    background: rgba(78, 209, 218, 0.5)
  
  header nav ul li a
    color white
    display block
    text-decoration none
  
  .caret
    float right
    
  .item
    top .8em
    padding 1.5em .9em
