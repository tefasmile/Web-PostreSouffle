  background-color #68B4CA
  padding 1em  1.5em
  font-size 1.1em
  color white
  margin-top 1.8em

#button_send:hover,
button:hover,
input[type="button"]:hover,
.button:focus,
button:focus,
input[type="button"]:focus
  color white
  border-color lime
  background-color #68B4CA

.border-top
  border-top 1px solid gris_claro
  margin-top 0.8em

.button-menu
  color azul_aqua
  cursor pointer
  display block
