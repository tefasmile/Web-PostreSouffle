  .products
    display none
    background azulito
    left 0
    position relative
    top .9em 
    li
      border-bottom 1px solid white
      left 0
      list-style none
      margin-bottom 0
      text-align left
      &:nth-child(3)
        border-bottom none
    a
      &:hover
        background-color rgba(56, 75, 40, 0.1)
        border-top 5px solid transparent

  
